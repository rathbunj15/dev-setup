# Usage: mkscript <script name>
# Example: mkscript run-update.sh

if [[ -z "$1" ]]; then
    echo "Usage: mkscript <script name>"
    exit 1
fi

if [[ -f $1 ]]; then
    echo "Script '$1' already exists."
    exit 1
fi

echo "#!/bin/bash" > "$1"

chmod +x "$1"
echo "Script '$1' created successfully."